<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crawl.webchat.dao.BiliCategoryDao">

	<!--实体映射-->
	<resultMap id="base_result_map" type="com.crawl.webchat.entity.po.BiliCategory">
		<!---->
		<id column="id" property="id"  />
		<!---->
		<result column="name" property="name"  />
		<!---->
		<result column="channel" property="channel"  />
		<!---->
		<result column="pid" property="pid"  />
		<!---->
		<result column="url" property="url"  />
		<!---->
		<result column="enName" property="enName"  />
	</resultMap>


	<!-- 通用查询结果列-->
	<sql id="base_column_list">
		 id,name,channel,pid,url,enName
	</sql>

	<sql id="base_condition_filed">			
			<if test="name != null and name!=''">
				 and  name = #{name}
			</if>
			<if test="channel != null and channel!=''">
				 and  channel = #{channel}
			</if>
			<if test="pid != null">
				 and  pid = #{pid}
			</if>
			<if test="url != null and url!=''">
				 and  url = #{url}
			</if>
			<if test="enName != null and enName!=''">
				 and  enName = #{enName}
			</if>
	</sql>
	<!-- 通用条件列-->
	<sql id="base_condition">
	 <where> <include refid="base_condition_filed" />	 </where>
	</sql>

	<!-- 通用查询条件列-->
	<sql id="query_condition">
	 <where>
			<include refid="base_condition_filed" />
			<if test="nameFuzzy!= null  and nameFuzzy!=''">
				 and  name like concat('%', #{nameFuzzy}, '%')
			</if>
			<if test="channelFuzzy!= null  and channelFuzzy!=''">
				 and  channel like concat('%', #{channelFuzzy}, '%')
			</if>
			<if test="urlFuzzy!= null  and urlFuzzy!=''">
				 and  url like concat('%', #{urlFuzzy}, '%')
			</if>
			<if test="enNameFuzzy!= null  and enNameFuzzy!=''">
				 and  enName like concat('%', #{enNameFuzzy}, '%')
			</if>
	 </where>
	</sql>

	<!--删除：根据条件删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		 DELETE FROM bili_category <include refid="base_condition" />
	</delete>

	<!-- 插入 （匹配有值的字段）-->
	<insert id="insert" parameterType="com.crawl.webchat.entity.po.BiliCategory">
		 INSERT ignore INTO bili_category
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				 id,
			</if>
			<if test="name != null">
				 name,
			</if>
			<if test="channel != null">
				 channel,
			</if>
			<if test="pid != null">
				 pid,
			</if>
			<if test="url != null">
				 url,
			</if>
			<if test="enName != null">
				 enName,
			</if>
		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id!=null">
				 #{id},
			</if>
			<if test="name!=null">
				 #{name},
			</if>
			<if test="channel!=null">
				 #{channel},
			</if>
			<if test="pid!=null">
				 #{pid},
			</if>
			<if test="url!=null">
				 #{url},
			</if>
			<if test="enName!=null">
				 #{enName},
			</if>
		 </trim>
	</insert>

	<!-- 添加 （批量插入）-->
		<insert id="insertBatch" parameterType="com.crawl.webchat.entity.po.BiliCategory">
		 INSERT INTO bili_category(id,name,channel,pid,url,enName)values
			 <foreach collection="list" item="item" separator=",">
			 (
			 #{item.id},#{item.name},#{item.channel},#{item.pid},#{item.url},#{item.enName}
			 )
			 </foreach>
		</insert>

	<!-- 修 改-->
	<update id="update" parameterType="com.crawl.webchat.entity.po.BiliCategory">
		 UPDATE bili_category
 		 <set>
			<if test="name != null">
				 name = #{name},
			</if>
			<if test="channel != null">
				 channel = #{channel},
			</if>
			<if test="pid != null">
				 pid = #{pid},
			</if>
			<if test="url != null">
				 url = #{url},
			</if>
			<if test="enName != null">
				 enName = #{enName},
			</if>
 		 </set>
 		 where id = #{id}
	</update>

	<!-- 根据PrimaryKey删除-->
	<delete id="deleteByPrimaryKey">
		delete from bili_category where id=#{id}
	</delete>

	<!-- 根据PrimaryKey获取对象-->
	<select id="selectByPrimaryKey" resultMap="base_result_map" >
		select <include refid="base_column_list" /> from bili_category where id=#{id}
	</select>

	<!-- 查询集合-->
	<select id="selectList" resultMap="base_result_map" >
		 SELECT <include refid="base_column_list" /> FROM bili_category <include refid="query_condition" />
		 <if test="orderBy!=null">
			 order by ${orderBy}
			 <if test="ascOrDesc!=null">
				 ${ascOrDesc}
			 </if>
		 </if>
		 <if test="page!=null">
			 limit #{page.start},#{page.end}
		 </if>
	</select>

	<!-- 查询数量-->
	<select id="selectCount" resultType="java.lang.Integer" >
		 SELECT count(1) FROM bili_category <include refid="query_condition" />
	</select>

</mapper>